{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "alwaysStrict": true,
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "lib": ["es2021"],
    "types": ["node"],

    "outDir": "lib",
    "sourceMap": true,

    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.js"]

}